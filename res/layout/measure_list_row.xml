<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/list_selector_dark" >

    <TextView
        android:id="@+id/measurePrio"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
         >

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/collections_view_as_list" >
        </ImageView>

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/ImageView01"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/navigation_accept" >
        </ImageView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_toRightOf="@+id/ImageView01"
            android:ellipsize="marquee"
            android:inputType="none"
            android:maxLines="1"
            android:paddingBottom="6dp"
            android:scrollHorizontally="true"
            android:text="@+id/TextView01"
            android:textColor="@color/actionbar_background_dark"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/text1"
            android:layout_below="@+id/text1"
            android:text="Datum" />

        <ImageView
            android:id="@+id/ImageView03"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/text2"
            android:src="@drawable/alerts_and_states_warning"
            android:visibility="gone" >
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/attachementInfos"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="20dp"
        android:layout_marginRight="4dp">

        <ImageView
            android:id="@+id/ImageView04"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/attachment"
            android:layout_gravity="top|right"
            android:visibility="gone" >
        </ImageView>

        <ImageView
            android:id="@+id/ImageView05"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|right"
            android:src="@drawable/device_access_camera"
            android:visibility="gone" >
        </ImageView>
    </LinearLayout>

</LinearLayout>